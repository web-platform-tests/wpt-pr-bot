    "node-fetch": "^2.6.0",
    "q": "^1.5.1",
    "request": "2.88.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jshint": "^2.9.6",
    "mocha": "7.2.0",
    "nyc": "^15.0.0",
    "replay": "^2.3.0",
    "sinon": "^9.0.0"
  },
