{
  "name": "wpt-pr-bot",
  "version": "0.4.0",
  "description": "A helper bot for web-platform-tests.",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-platform-tests/wpt-pr-bot.git"
  },
  "main": "index.js",
  "scripts": {
    "gcp-build": "node create-secrets.js",
    "deploy": "gcloud app deploy",
    "coverage": "nyc --all --check-coverage --per-file npm run test-unit",
    "lint": "jshint index.js lib test",
    "test": "npm run lint && npm run coverage",
    "test-unit": "mocha -u tdd ./test/setup.js ./test/*.js",
    "start": "node index.js"
  },
  "dependencies": {
    "@google-cloud/logging-bunyan": "^5.0.1",
    "@google-cloud/secret-manager": "^5.0.1",
    "bl": "^6.0.12",
    "bunyan": "^1.8.15",
    "express": "^4.18.2",
    "flags": "^0.1.3",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.4",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "jshint": "^2.13.6",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "replay": "^2.4.0",
    "sinon": "^18.0.0"
  },
  "license": "Apache-2.0",
  "author": "Tobie Langel"
}
